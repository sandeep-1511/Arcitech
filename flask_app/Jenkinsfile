pipeline {
    agent any
    stages {
        stage('Clone Repository') {
            steps {
                git branch:  'main',  url:'https://github.com/sandeep-1511/Arcitech.git'
            }
        }
        stage('Install Dependencies') {
            steps {
                sh '''
                #!/bin/bash
                cd ~/flask_app
                python3 -m venv venv
                source venv/bin/activate
                pip install flask gunicorn
                '''
            }
        }
    }
}
